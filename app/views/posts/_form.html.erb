<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for Post.new, role: "form" do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="uploadModalLabel">Upload image</h4>
      </div>
      <div class="modal-body">
          <div class="form-group">
            <%= f.label :image, "File input" %>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :email, "Email address" %>
            <%= f.email_field :email, class: "form-control", placeholder: "you@example.com", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :location %>
            <%= f.text_field :location, class: "form-control", placeholder: "Chicago, IL", required: true %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= f.submit "Upload", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
