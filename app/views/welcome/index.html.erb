<div class="container">
  <div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
    <div class="header">
      <h1><i class="icon-trash"></i>Clowow</h1>
      <h2>Just pictures of clouds and stuff.</h2>
      <button type="button" class="upload btn btn-primary" data-toggle="modal" data-target="#uploadModal">Upload</button>
    </div>

    <div class="feed">
      <% @posts.each do |post| %>
      <div class="post" data-id="<%= post.id %>">
        <img src="<%= post.content %>">
        <div class="info row">
          <div class="like-count col-xs-6 col-sm-4">
            <a class="like" href="#" data-post="<%= post.id %>"><i class="fa fa-heart"></i></a>
            <%= pluralize post.likes.size, "like" %>
          </div>
          <div class="location hidden-xs col-sm-4">
            <%= post.location %>
          </div>
          <div class="comment-count col-xs-6 col-sm-4">
            <a class="view-comments" href="#" data-post="<%= post.id %>"><%= pluralize post.comments.size, "comment" %></a>
          </div>
        </div>

        <div class="comments row">
          <% post.comments.each do |comment| %>
          <div class="comment col-sm-12">
            <hr>
            <%= comment.content %>
          </div>
          <% end %>
          <div class="col-sm-12">
            <div class="submit-comment comment input-group">
              <input type="text" class="form-control">
              <span class="input-group-btn">
                <button class="btn btn-primary" type="button">Comment</button>
              </span>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="uploadModalLabel">Upload image</h4>
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="you@example.com" required>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">File input</label>
            <input type="file" id="exampleInputFile">
          </div>
          <div class="form-group">
            <label for="exampleInputLocation1">Location</label>
            <input type="email" class="form-control" id="exampleInputLocation1" placeholder="Chicago, IL" required>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Upload</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
