
<div class="container">
	<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
		<div class="header">
			<h1><i class="icon-trash"></i>Clowow</h1>
			<h2>Just pictures of clouds and stuff.</h2>
			<button type="button" class="upload btn btn-primary">Upload</button>
		</div>
		<div class="feed">
			<% @posts.each do |post| %>
			<div class="post" data-id="<%= post[:id] %>">
				<img src="<%= post.content %>">
				<div class="info row">
					<div class="like-count col-xs-6">
					<a class="like" href="#" data-post="<%= post[:id] %>"><i class="fa fa-heart"></i></a>
						<%= @like_count[post[:id]] %>
					</div>
					<div class="comment-count col-xs-6">
						<a class="view-comments" href="#" data-post="<%= post[:id] %>"><%= @comment_count[post[:id]] %></a>
					</div>
				</div>

				<div class="comments row">
					<% @comments[post[:id]].each do |comment| %>
					<div class="comment col-sm-12">
						<hr>
						<%= comment %>
					</div>
					<% end %>
					<div class="col-sm-12">
						<div class="submit-comment comment input-group">
							<input type="text" class="form-control">
							<span class="input-group-btn">
								<button class="btn btn-primary" type="button">Comment</button>
							</span>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>